#!/bin/sh

set -e
set -u

SETTINGS_DIR=${HOME}/ai/settings
HISTORY_DIR=${HOME}/ai/commandhistory

mkdir -p $HISTORY_DIR

op inject --force --in-file="${SETTINGS_DIR}/.claude.tmpl.json" --out-file="${SETTINGS_DIR}/.claude.json"

podman run --rm -it \
  -v ${HISTORY_DIR}:/commandhistory \
  -v ${SETTINGS_DIR}:/settings \
  -v $(pwd):/app \
  -w /app \
  ai:latest bash
